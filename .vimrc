set exrc
set secure
execute pathogen#infect()
syntax enable
set background=dark
colorscheme solarized
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set colorcolumn=110
set cursorline
set hidden
filetype on           " Enable filetype detection
filetype indent on    " Enable filetype-specific indenting
filetype plugin on    " Enable filetype-specific plugins
